/* pages/list/list.wxss */
.date-item {
  display: flex;
  align-items: center;
  height: 150rpx;
  margin: 0 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.day {
  font-size: 40rpx;
  line-height: 60rpx;
  opacity: 0.8;
}

.date {
  opacity: 0.5;
  font-size: 25rpx;
  line-heigth: 35rpx;
}

.temp {
  flex-grow: 1;
  text-align: center;
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 56rpx;
}

.weather-icon {
  width: 80rpx;
  height: 80rpx;
}
